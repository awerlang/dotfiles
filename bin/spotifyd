#!/bin/bash
set -euo pipefail

exec bwrap --ro-bind /usr /usr \
           --ro-bind /bin /bin \
           --ro-bind /lib /lib \
           --ro-bind /lib64 /lib64 \
           --ro-bind /etc/alsa /etc/alsa \
           --ro-bind /etc/resolv.conf /etc/resolv.conf \
           --ro-bind /run /run \
           --ro-bind /var/lib /var/lib \
           --proc /proc \
           --dev /dev \
           --tmpfs "$HOME" \
           --tmpfs /tmp \
           --tmpfs /var/tmp \
           --unshare-all \
           --share-net \
           --die-with-parent \
           /usr/local/bin/spotifyd --no-daemon --zeroconf-port 57621
