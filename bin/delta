#!/bin/bash
set -euo pipefail

exec bwrap --ro-bind / / \
           --dev /dev \
           --unshare-all \
           --die-with-parent \
           -- /opt/bin/delta "$@" --theme='zenburn' \
                                  --plus-color="#00431B" \
                                  --plus-emph-color="#008F39" \
                                  --minus-color="#43001B" \
                                  --minus-emph-color="#8F0039"
